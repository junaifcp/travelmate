<div class="card">
  <div class="card-body d-flex">
    <h4 class="card-title">All posts and stories</h4>
    <a href="" class="btn btn-info ms-auto">Add new post</a>
  </div>
  <div class="comment-widgets">
    {{#each posts.docs}}
    <div class="">
      <a href="" class=""><button type="button"
          class="btn btn-danger btn-sm text-white rounded-5 rounded-top">Delete</button></a>
    </div>
    <div class="card mb-3" style="max-width: 940px;">
      <div class="row g-0 ">
        <div class="col-md-4">
          <img src="/uploads/{{photo}}" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{title}}&nbsp;&nbsp;|&nbsp;{{username}}</h5>
            <p class="card-text">{{slice desc}}</p>
            <p class="card-text"><small class="text-muted">Author : {{username}}&nbsp;|<small class="text-muted">
                  Category : {{categories}}&nbsp;|</small></small>&nbsp;<small class="text-muted">Date : {{date
                createdAt}}</small></p>
          </div>


        </div>

      </div>

    </div>
    {{/each}}
  </div>
    {{!-- pagination progress --}}
        <div class="me-auto" style="margin-left: auto;">
            <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="/admin/posts-all?page={{posts.prevPage}}&limit={{posts.limit}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                 {{#times posts.totalPages}}
                <li class="page-item"><a class="page-link" href="/admin/posts-all?page={{this}}&limit=10">{{this}}</a></li>
               {{/times}}
                <li class="page-item">
                    <a class="page-link" href="/admin/posts-all?page={{posts.nextPage}}&limit={{posts.limit}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
        </div>
        
        {{!-- /pagination progress --}}
</div>


