<div class="card">
                <div class="card-body d-flex">
                  <h4 class="card-title">Recently added guides</h4>
                  <a href="#addGuides" class="btn btn-info ms-auto">Add new Guide</a>
                </div>
                <div
                  class="comment-widgets scrollable"
                  style="max-height: 430px"
                >
                  <!-- Comment Row -->
                  {{#each members}}
                  <div class="d-flex flex-row comment-row mt-0">
                    <div class="p-2">
                      <img
                        src="/uploads/{{this.profilePicId}}"
                        alt="user"
                        width="50"
                        class="rounded-circle"
                      />
                    </div>
                    <div class="comment-text w-100">
                      <h6 class="font-medium"><b>Name: </b> {{this.firstName}}&nbsp;{{this.lastName}}</h6>
                      <span class="mb-3 d-block"
                        >
                        <p class="text-body"><b>Location: </b>{{place}},&nbsp;{{state}}</p>
							        	<p class="text-body"><b>Languages: </b>{{languages}}</p>
								        <p class="text-body"><b>What I offer: </b>{{offer}}</p>
                      </span>
                      <div class="comment-footer">
                        <span class="text-muted float-end">{{date createdAt}}</span>
                     
                        <button
                          type="button"
                          class="btn btn-warning btn-sm text-white"
                        >
                          Block
                        </button>
                        <button
                          type="button"
                          class="btn btn-danger btn-sm text-white"
                        >
                          Delete
                        </button>
                      </div>
                    </div>
                  </div>
                  <!-- Comment Row -->
                  {{/each}}
                  <!-- Comment Row -->
                  
                </div>
              </div>
              