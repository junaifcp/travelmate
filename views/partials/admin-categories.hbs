<div class="card">
    <h1 class="text-center pt-3">Post Categories</h1>
    
    <div class="comment-widgets scrollable" style="max-height: 520px">
        <div class="d-flex flex-row comment-row mt-0">

            <!-- Contact Start -->
            <div class="container bg-white pt-3 py-5">
                <div class="col-md-12 pb-5">
                    <div class="contact-form">
                        <div id="success"></div>

                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-white">Number</th>
                                    <th scope="col" class="text-white">Name</th>
                                    <th scope="col" class="text-white">Count</th>                           
                                    <th scope="col" class="text-white">Date</th>                              
                                </tr>
                            </thead>
                            <tbody>
                                {{#each categories}}
                                <tr>
                                    <th scope="row">{{counter @ index}}</th>
                                    <td>{{name}}</td>
                                    <td>{{count}}</td>
                                    <td>{{date createdAt}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>