    <div class="content mb-5">
 

            <!-- Page Header Start -->
            <div class="container py-5 px-2 bg-primary">
                <div class="row py-5 px-4">
                    <div class="col-sm-6 text-center text-md-left">
                        <h3 class="mb-3 mb-md-0 text-white text-uppercase font-weight-bold">Create your story</h3>
                    </div>
                    <div class="col-sm-6 text-center text-md-right">
                        <div class="d-inline-flex pt-2">
                            <h5 class="m-0 text-white"><a class="text-white" href="">Create and post</a></h5>
                           
                        </div>
                    </div>
                </div>
            </div>
            <!-- Page Header End -->
            <!-- Contact Start -->
            <div class="container bg-white pt-3 py-5">
         
                <div class="col-md-12 pb-5">
                    <div class="contact-form">
                        <div id="success"></div>
                        <form action="/api/posts" method="POST" enctype="multipart/form-data">
                             <div class="control-group">
                                <input type="text" name="username" value="{{users.userName}}" class="form-control" id="name" readonly="readonly" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <input type="text" name="title" class="form-control" id="name" placeholder="Title" />
                                <p class="help-block text-danger"></p>
                            </div>
                            
                            <div class="control-group">
                                <textarea class="form-control" name="desc" rows="8" id="message" placeholder="Post description" ></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <textarea class="form-control" name="markdown" rows="8" id="message" placeholder="#BIG DATA" ></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                 <select class="form-control" name="categories">
                                        <option class="hidden" selected disabled>Please select the category</option>
                                        {{#each categories}}
                                        <option>{{name}}</option>
                                       {{/each}}
                                    </select>
                                {{!-- <input type="text" name="categories" class="form-control" id="subject" placeholder="Enter category name" />
                                <p class="help-block text-danger"></p> --}}
                            </div>
                             <div class="control-group">
                                <input type="file" name="images" class="form-control" id="formFile" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div>
                                <button class="btn btn-primary" type="submit" id="">Add post</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Contact End -->
