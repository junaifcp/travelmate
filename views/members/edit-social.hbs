<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Social links</h3>
				<div class="d-flex justify-content-end social_icon">
					<span><i class="fab fa-facebook-square"></i></span>
					<span><i class="fab fa-google-plus-square"></i></span>
					<span><i class="fab fa-twitter-square"></i></span>
                   
				</div>
			</div>
			<div class="card-body">
				<form action="/members/edit-social/{{user._id}}" method="POST">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-twitter"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="http://twitter.com" name="twitter">	
					</div>
                    <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-facebook-f"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="http://facebook.com" name="facebook">	
					</div>
                    <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-linkedin-in"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="http://linkedin.com" name="linkedIn">	
					</div>
                    <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fab fa-instagram"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="http://instagram.com" name="instagram">	
					</div>
					
					
					<div class="form-group">
						<input type="submit" value="Update" class="btn float-right login_btn">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>