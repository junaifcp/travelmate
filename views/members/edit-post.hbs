    <div class="content mb-5">
 

            <!-- Page Header Start -->
            <div class="container py-5 px-2 bg-primary">
                <div class="row py-5 px-4">
                    <div class="col-sm-6 text-center text-md-left">
                        <h3 class="mb-3 mb-md-0 text-white text-uppercase font-weight-bold">Edit your post</h3>
                    </div>
                    
                </div>
            </div>
            <!-- Page Header End -->


            <!-- Contact Start -->
            <div class="container bg-white pt-3 py-5">
         
                <div class="col-md-12 pb-5">
                    <div class="contact-form">
                        <div id="success"></div>
                        <form action="/api/posts/{{post._id}}" method="POST">
                                <input type="hidden" name="_method" value="PUT">
                             <div class="control-group">
                                <input type="text" name="username" value="{{users.firstName}}" class="form-control" id="name" readonly="readonly" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <input type="text" name="title" class="form-control" value="{{post.title}}" id="name" placeholder="Title" />
                                <p class="help-block text-danger"></p>
                            </div>
                            
                            <div class="control-group">
                                <textarea class="form-control" name="desc" rows="14" id="comment-text">{{post.desc}}</textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <select class="form-control" name="categories">
                                        <option class="hidden" selected disabled>Please select the category</option>
                                        {{#each categories}}
                                        <option>{{name}}</option>
                                       {{/each}}
                                    </select>
                               
                            </div>
                            <div>   
                                <button class="btn btn-primary" type="submit" id="">Edit post</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
