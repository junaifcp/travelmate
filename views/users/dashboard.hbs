<div class="wrapper">

  <div class="sidebar">
    <div
      class="sidebar-text d-flex flex-column h-75 justify-content-center text-center"
    >

      <a href="/dashboard/edit-pic">
        <img
          class="mx-auto d-block w-75 bg-primary img-fluid rounded-circle mb-4 p-3"
          src="/uploads/{{users.profilePicId}}"
          alt="Image"
        /></a>
      {{! Image upload model }}

      <!-- Modal -->
      {{! / Image upload model }}
      <h1 class="font-weight-bold">{{users.firstName}}</h1>
      <p>{{users.email}}
        <span><a
            class="btn btn-default btn-sm"
            href="/dashboard/edit-profile"
          ><i class="fa fa-cog"></i>&nbsp;Edit</a></span></p>

      <p class="">
        <p>{{users.bio}}</p>
      </p>
      {{!-- <a href="" class="btn btn-lg btn-block btn-primary mt-auto">Hire Me</a> --}}
    </div>
    <div
      class="sidebar-icon d-flex flex-column h-100 justify-content-center text-right"
    >
      <i class="fas fa-2x fa-angle-double-right text-primary"></i>
    </div>
  </div>

  <div class="content">
    <!-- Subscribe Start -->

    <!-- Subscribe End -->
    <section>
      <div class="container bg-white pt-3 my-5">
        <div class="row">
          <div class="col-md-8">
            <div class="profile">
              <h1
                class="page-header"
              >{{users.firstName}}&nbsp;{{users.lastName}}</h1>
              <div class="row">
                <div class="col-md-4">
                  <img
                    src="/uploads/{{users.profilePicId}}"
                    class="img-thumbnail img-fluid"
                    alt=""
                  />
                </div>
                <div class="col-md-5">
                  <ul>
                    <li><strong>Name:</strong>{{users.firstName}} {{users.lastName}}</li>
                    <li><strong>Email:</strong>{{users.email}}</li>
                    {{#if users.area}}
                    <li><strong>City:</strong>{{users.area}}</li>
                    {{/if}}
                    {{#if users.state}}
                    <li><strong>State:</strong>{{users.state}}</li>
                    {{/if}}
                    <li><strong>Gender:</strong>{{users.gender}}</li>
                  </ul>
                </div>
              </div><br /><br />

            </div>
          </div>
        </div>

      </div>
    </section>
    {{! Add travel wishlist }}
    <section>
      <div class="container bg-white pt-3 my-5">
        <div class="row">
          <div class="col-md-12">
            <div class="profile">
              <h1 class="page-header">Add a travel wishlist</h1>
              <p>Add places where you wanr to travel in future. We will let you
                know about perfect guides and tour operators based on your
                wishlist travel</p>
              {{! add wishlist menu bar }}
              <div class="row">
                <div
                  class="tab-pane fade show active shadow p-3 mb-5 bg-white rounded"
                  id="v-pills-1"
                  role="tabpanel"
                  aria-labelledby="v-pills-nextgen-tab"
                >
                  <form
                    action="/dashboard/add-wishlist"
                    method="POST"
                    class="search-property-1"
                  >
                    <div class="row no-gutters">
                      <div class="col-md d-flex">
                        <div class="form-group p-4 border-0">
                          <label for="#">Destination</label>
                          <div class="form-field">
                            <div class="icon"><span
                                class="fa fa-search"
                              ></span></div>
                            <input
                              type="text"
                              name="destination"
                              class="form-control"
                              placeholder="Search place"
                            />
                          </div>
                        </div>
                      </div>
                      <div class="col-md d-flex">
                        <div class="form-group p-4">
                          <label for="#">Check-in date</label>
                          <div class="form-field">
                            <div class="icon"><span
                                class="fa fa-calendar"
                              ></span></div>
                            <input
                              type="text"
                              name="checkInDate"
                              class="form-control checkin_date"
                              placeholder="Check In Date"
                            />
                          </div>
                        </div>
                      </div>
                      <div class="col-md d-flex">
                        <div class="form-group p-4">
                          <label for="#">Check-out date</label>
                          <div class="form-field">
                            <div class="icon"><span
                                class="fa fa-calendar"
                              ></span></div>
                            <input
                              type="text"
                              name="checkOutDate"
                              class="form-control checkout_date"
                              placeholder="Check Out Date"
                            />
                          </div>
                        </div>
                      </div>

                      <div class="col-md d-flex">
                        <div class="form-group d-flex w-100 border-0">
                          <div
                            class="form-field w-100 align-items-center d-flex"
                          >
                            <input
                              type="submit"
                              value="Add wishlist"
                              class="align-self-stretch form-control btn btn-primary"
                            />
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
                {{! wishlist card }}
                {{#each users.wishList}}

                  <div
                    class="card text-white bg-dark mt-3 m-auto"
                    style="max-width: 30rem;"
                  >
                    <div class="card-header">Destination :&nbsp;
                      {{this.destination}}
                      &nbsp;
                      <a
                        class="btn btn-danger rounded"
                        href="/dashboard/delete-wish/{{this._id}}"
                        aria-label="Delete"
                        onclick="return confirm('Are you sure to delete {{this.Name}}')"
                      >
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                      </a>
                    </div>
                    <div class="card-body">
                      <p class="card-text"><span
                          class="fa fa-calendar"
                        ></span>&nbsp;Travel date :{{this.checkInDate}}</p>
                      <p class="card-text"><span
                          class="fa fa-clock-o"
                        ></span>&nbsp;Duration :&nbsp;{{this.days}}
                        days</p>
                    </div>
                  </div>
                {{/each}}
                {{! /wishlist card }}
              </div>
              <div class="row">
                  <div class="col-md-4 py-5 m-auto">
                    {{!-- <a href="" class="btn btn-lg btn-block btn-primary mt-auto">Hire Me</a> --}}
                   <a href="/dashboard/find-guide"><button class="btn btn-lg btn-block btn-primary py-3" id="findGuide">find my guides</button></a> 

                 </div>
                 <div class="row">
                   {{#if members}}
                    {{#each members}}
                         <div class=" col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="room-item shadow rounded overflow-hidden">
                            <div class="position-relative">
                                <img class="img-fluid" src="/uploads/{{this.profilePicId}}" alt="">
                                
                            </div>
                            <div class="p-4 mt-2">
                                <div class="d-flex justify-content-between mb-3">
                                    <h5 class="mb-0">{{this.firstName}}&nbsp;|&nbsp;{{destination}}</h5>
                            
                                </div>
                                <div class="d-flex mb-3">
                                    <small class="border-end me-3 pe-3"><i class="fa fa-folder mx-2"></i>5 Stories</small>
                                    <small class="border-end me-3 pe-3"><i class="fa fa-comments mx-2"></i>20 feedbacks</small>
                                    <small class="fa fa-star text-primary px-4">4/5</small>
                                </div>
                                <p class="text-body mb-3"> Erat ipsum justo amet duo et elitr dolor, est duo duo eos lorem sed diam stet diam sed stet lorem.</p>
                                <div class="d-flex justify-content-between">
                                    <a class="btn btn-sm btn-primary rounded py-2 px-4" href="/member/{{_id}}">Show profile</a>
                                    <a class="btn btn-sm btn-dark rounded py-2 px-4" href="/members/contact/{{_id}}">Contact Now</a>
                                </div>
                            </div>
                        </div>
					           </div> 
                     {{/each}}
                 {{/if}}  
                 </div>
                
              </div>
            </div>
          </div>
        </div>
        <hr />
      </div>
      {{! find tourist guides }}

    </section>
    {{! find  }}

    <!-- Footer Start -->

    <!-- Footer End -->
  </div>
</div>

