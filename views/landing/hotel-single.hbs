{{!-- blog body --}}
<section class="ftco-section ftco-no-pt ftco-no-pb">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 ftco-animate py-md-5 mt-md-5">
       
          {{!-- carousel --}}
         {{>hotel-images}}
         {{!-- /carousel --}}
         {{#if hotelDesc.description}}
         <h1>About</h1>
         <p class="py-3">{{hotelDesc.description}}</p>
         {{else}}
         <h3 class="py-3">Hotel description is not available</h3>
         {{/if}}
        {{#if map}}
        <h1 class="py-3">Location</h1>
        <img src="{{map.map_preview_url}}" class="img-fluid" alt="">
        {{/if}}
        <a href="{{hotelReviews.url}}" target="_blank"><button class="btn btn-primary w-25 py-3" type="submit">Book Now</button></a>

      </div> <!-- .col-md-8 -->
      <div class="col-lg-4 sidebar ftco-animate bg-light py-md-5">
        <div class="sidebar-box pt-md-5">
          <form action="#" class="search-form">
            <div class="form-group">
              <span class="icon fa fa-search"></span>
              <input type="text" class="form-control" placeholder="Search...">
            </div>
          </form>
        </div>

        <div class="sidebar-box ftco-animate">
          <h3>Nearby Destinations</h3>
         {{#each nearby.landmarks.closests}}
          <div class="block-21 mb-4 d-flex">
            {{!-- <a class="blog-img mr-4" style="background-image: url(/uploads/{{photo}});" href="/blog-single/{{_id}}"></a> --}}
            <div class="text d-flex">
              <h3 class="heading"><a href="/blog-single/{{_id}}">{{landmark_name}}</a></h3>
              <div class="meta">
                {{!-- <div><a href="#"><span class="fa fa-calendar"></span></a></div> --}}
                <div><a href="#"><span class="fa fa-road"></span>&nbsp;{{km distance}}&nbsp;km</a></div>
                {{!-- <div><a href="#"><span class="fa fa-comment"></span> 19</a></div> --}}
              </div>
            </div>
          </div>
          {{/each}}
        </div>  
          <div class="sidebar-box ftco-animate">
          <h3>Popular Places</h3>
         {{#each nearby.landmarks.populars}}
          <div class="block-21 mb-4 d-flex">
            {{!-- <a class="blog-img mr-4" style="background-image: url(/uploads/{{photo}});" href="/blog-single/{{_id}}"></a> --}}
            <div class="text d-flex">
              <h3 class="heading"><a href="/blog-single/{{_id}}">{{landmark_name}}</a></h3>
              <div class="meta">
                {{!-- <div><a href="#"><span class="fa fa-calendar"></span></a></div> --}}
                <div><a href="#"><span class="fa fa-road"></span>&nbsp;{{km distance}}&nbsp;km</a></div>
                {{!-- <div><a href="#"><span class="fa fa-comment"></span> 19</a></div> --}}
              </div>
            </div>
          </div>
          {{/each}}
        </div>   
      </div>

    </div>
  </div>
</section> <!-- .section -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.js"></script>
<script>
    baguetteBox.run('.tz-gallery');
</script>